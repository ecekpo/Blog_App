<div class=title>
<h3>Welcome to Blog App</h3>
</div>

<div class=form-holder>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "area", autofocus: true, autocomplete: "email" %>
  </div>
​
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "area",  autocomplete: "current-password" %>
  </div>
​
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
​
  <div class="actions">
    <%= f.submit "Log in", class: 'login-btn', data: {turbo: false} %>
  </div>
<% end %>
​
<%= render "devise/shared/links" %>
</div>